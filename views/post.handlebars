<div class="text-center">
  <h2>{{title}}</h2>
  <p><i>Created by {{user.first_name}} on {{format_date date_created}}</i></p>
  <p>{{content}}</p>
</div>
{{#if comments.length}}
{{#each comments as |comment|}}
<div class="text-center">
  <p><strong>{{format_date comment.date_created}} - {{comment.user.first_name}}:</strong> {{comment.content}}</p>
</div>
{{/each}}
{{/if}}
{{!-- add comment form --}}
<div class="col-md-6">
    <h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Content:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="/js/post.js"></script>